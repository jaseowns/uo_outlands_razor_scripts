# ID Bot - No Sort Just ID by Jaseowns
# UO Outlands
@setvar! jaseowns_AutomaticallyTryRecycleAfterID 1
@setvar! messySourceContainer 1
if messySourceContainer = 1
    overhead "Pick a chest, or escape to automatically target recycler"
    @setvar! messySourceContainer
endif

if messySourceContainer = 0 or messySourceContainer = 1
   if findtype "ornate elven chest" ground -1 -1 2 as source_container
        overhead "Automatically checking recycler" 88
        @setvar! messySourceContainer source_container
    endif 
endif

@clearignore
dclick messySourceContainer
while not dead
    while findtype 31169|31172|31017|31019|31021|31023|31025|31027|31029|31031|31033|31035|31037|31038|31041|31043|31045|31047|31049|31051|31053|31055|3920|5042|5117|30990|30993|30994|30995|31184|31186|7026|7027|7029|7031|7033|7034|7035|7107|7109|31002|31130|3570|3571|3572|3573|3834|22187|31141|31142|5056|5059|5060|5061|5063|5070|5074|5075|5076|5078|5085|5089|5090|5101|5103|5105|5106|5129|5131|5132|5135|5138|5139|5142|5143|5144|5146|5201|5203|5204|5205|5207|7169|7170|7173|7175|7177|7179|7181|7610|7947|31003|31004|31005|31006|31007|31008|31009|31010|31011|31012|31015|31191|3740|3742|3762|3763|10245|20006|20008|20010|20012|20014|20016|3719|3922|3938|5121|5123|5125|30989|30992|30996|30997|30998|31176|31188|3568|3713|3721|3932|5040|5044|5112|5127|5177|5179|5181|30991|30999|31000|31001|31014|31178|31180|31182|3909|3911|3913|3915|3917|3934|3937|5046|5049|5115|5119|5182|5185|5187|30988|31128|31190 messySourceContainer as item
        getlabel item desc
        overhead "Item: {{desc}}" 88
        @setvar! ignoreItem 1
        if "unidentified" in desc
            if skill "Item Identification" = 120
                useskill "itemId"
                wft 500
                target messySourceContainer
                wait 2000
                @setvar! ignoreItem 0
            elseif skill "Item Identification" > 0
                useskill "itemId"
                wft 500
                target item
                wait 2000
                @setvar! ignoreItem 0
            endif
        endif
        if ignoreItem = 1
            @ignore item
            if jaseowns_AutomaticallyTryRecycleAfterID = 1 and gumpexists 4045111101
                for 4
                    gumpresponse 6 4045111101
                endfor
            endif
        endif
    endwhile
    wait 500
endwhile
@clearignore



