            @setvar! tameThisThing janimal
            break
        endif
    endwhile
elseif skill "Animal Taming" < 110
    while findtype "a earth drake|a acarid" ground -1 -1 3 as janimal
        getlabel janimal desc
        if "released" in desc
            // ignore them
            @ignore janimal
        elseif "tame" in desc or "bonded" in desc
            // ignore them
