# Bapeths Simple Disembark
#
# This script will disembark your followers and you
# Player must manually target location
#
# Script starts here
clearsysmsg
if followers >= 1
    overhead 'Where shall I disembark?' 45
    say '[DisembarkFollowers'
    wft 500
    while targetexists 
        //donothing
    endwhile
    getlabel backpack ping
    if insysmsg 'That is not a valid location'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'That is too far away'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'Target cannot be seen'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'The requested target is out of range'
        overhead 'Try Again...' 45
        replay
    endif
    say '[Disembark'
    wft 500
    while targetexists 
        //donothing
    endwhile
    getlabel backpack ping
    if insysmsg 'That is not a valid location'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'That is too far away'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'Target cannot be seen'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'The requested target is out of range'
        overhead 'Try Again...' 45
        replay
    endif
else
    overhead 'Where shall I disembark?' 45
    say '[Disembark'
    wft 500
    while targetexists 
        //donothing
    endwhile
    getlabel backpack ping
    if insysmsg 'That is not a valid location'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'That is too far away'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'Target cannot be seen'
        overhead 'Try Again...' 45
        replay
    elseif insysmsg 'The requested target is out of range'
        overhead 'Try Again...' 45
        replay
    endif
endif