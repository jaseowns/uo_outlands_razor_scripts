# "Borrowed" from Jaseowns bard training scripts
# UO Outlands
# Version: 1.0.0
# Description: Be at the Prevalia Zoo with instruments

# Can set these to 0 and it will not train the skill
@setvar! trainPeacemaking 100
@setvar! trainDiscordance 100
@setvar! trainProvocation 100

@setvar! loopDelay 5000
@setvar! discordanceUsed 0
    
if targetexists 
    hotkey 'Cancel Current Target'
endif

if skill "Peacemaking" < trainPeacemaking
    useskill 'Peacemaking'
    wft 100
    if findtype "an anaconda" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a rock guar" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a sand crawler" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a wolfhound" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    else
        overhead "No mob found" 34
        wait 2000
        replay
    endif
    if skill "Discordance" < trainDiscordance
        if skill "Peacemaking" < trainPeacemaking
            if discordanceUsed = 0
            wait 5300
                useskill 'Discordance'
                wft 100
                if findtype "an anaconda" ground -1 -1 10 as mob
                    if noto mob = hostile
                    target mob
                else
                ignore mob
                replay
            endif
            elseif findtype "a rock guar" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a sand crawler" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a wolfhound" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            else
                overhead "No mob found" 34
                wait 2000
                replay
            endif
                @setvar! discordanceUsed 1
            endif
        endif
    endif
elseif skill "Provocation" < trainProvocation
    useskill 'Provocation'
    wft 100
    if findtype "an anaconda" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a rock guar" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a sand crawler" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a wolfhound" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    else
        overhead "No mob found" 34
        wait 2000
        replay
    endif
    if skill "Discordance" < trainDiscordance
        if skill "Provocation" < trainProvocation
            if discordanceUsed = 0
                wait 5500
                useskill 'Discordance'
                wft 100
                if findtype "an anaconda" ground -1 -1 10 as mob
                    if noto mob = hostile
                    target mob
                else
                ignore mob
                replay
            endif
            elseif findtype "a rock guar" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a sand crawler" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a wolfhound" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            else
                overhead "No mob found" 34
                wait 2000
                replay
            endif
                @setvar! discordanceUsed 1
            endif
        endif
    endif
elseif skill "Discordance" < trainDiscordance
    useskill 'Discordance'
else
    overhead "You beat the game" 88
    overhead "Adjust skill check" 34
    stop
endif
wft 200

if insysmsg "What instrument"
    if findtype "bamboo flute" backpack as inny
        target inny
    elseif findtype "tambourine" backpack as inny
        target inny
    elseif findtype "drum" backpack as inny
        target inny
    elseif findtype "lute" backpack as inny
        target inny
    elseif findtype "lap harp" backpack as inny
        target inny
    else
        overhead "I don't have an inny" 34
        wait 2000
        replay
    endif
    wft 200
endif

wft 200

if insysmsg "Whom do you wish them to attack?"
    target self
endif
clearsysmsg

if insysmsg "Your barding skill cooldowns reset."
    replay
endif

for 1
    #overhead "Waiting..." 88
    wait loopDelay
endfor

loop