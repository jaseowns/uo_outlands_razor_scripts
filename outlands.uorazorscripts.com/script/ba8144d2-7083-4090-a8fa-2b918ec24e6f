# Drop off gold on the mule for Horfanuget by JaseOwns
# UO Outlands
removelist myGoldMules
createlist myGoldMules
# >info to get the Serial and update these values here
pushlist myGoldMules 0x3CF4EA
pushlist myGoldMules 0xB33C3
pushlist myGoldMules 0xB33C3
pushlist myGoldMules 0xB33C3
pushlist myGoldMules 0xB33C3

foreach currentMuleCheck in myGoldMules
    if find currentMuleCheck ground -1 2 and counttype "gold coin" backpack >= 2500
        getlabel currentMuleCheck desc
        if "51/50" in desc or "52/50" in desc or "52/50" in desc or "53/50" in desc or "54/50" in desc or "55/50" in desc or "56/50" in desc or "57/50" in desc or "58/50" in desc or "59/50" in desc or "60/50" in desc
            overhead "Our mule is overweight both in game and real life" 34 currentMuleCheck
        elseif "50/50" in desc
            overhead "This mule is full" 89 currentMuleCheck
        else
            if findtype "gold coin" backpack as item
                lift item 2500
                drop currentMuleCheck -1 -1 -1
                wait 650
            endif            
        endif
    endif
endfor

if listexists jaseowns_PreviousScript
    foreach myScript in jaseowns_PreviousScript
        hotkey myScript
    endfor
endif