            elseif skill 'magery' >= 40 and diffhits >= medDiff and mana >= 4 and miniHeal = 1 and not casting
                cast 'heal'     
                while not casting                   
                    if targetexists
                        hotkey 'cancel current target'
                    endif
                    cast 'heal' 
