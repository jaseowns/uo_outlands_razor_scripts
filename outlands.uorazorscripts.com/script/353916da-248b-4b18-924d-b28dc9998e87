    if "platemail gorget" in desc
        //donothing
    else 
        @unsetvar "NoMBgorget"
        replay
    endif
endif

if not find "MBchest" self
    hotkey "Set Last Target"
    wft 500
    overhead "Set bone Chest..." 78
    while targetexists 
        //do nothing
    endwhile
    @setvar "MBchest" lasttarget 
    getlabel "MBchest" desc
    if "bone chest" in desc
        //donothing
    else 
        @unsetvar "MBchest"
        replay
    endif
endif
