# Description: Be at the Prevalia Zoo with instruments

# Can set these to 0 and it will not train the skill, set to values you want to reach to avoid unnecessary cycles
@setvar! trainPeacemaking 100
@setvar! trainDiscordance 100
@setvar! trainProvocation 100

# Set to 1 to keep Peacemaking and Provocation at same skill level
@setvar! balancePeaceProv 1

# Modify delays if needed to account for latency or loop faster
@setvar! loopDelay 1050
@setvar! discordanceDelay 5250
@setvar! missingwait 2000
    
if targetexists 
    hotkey 'Cancel Current Target'
endif

if skill "Peacemaking" < trainPeacemaking
    if balancePeaceProv = 1
        if skill "Peacemaking" <= skill "Provocation"
            useskill 'Peacemaking'
            wft 100
        endif
    else
        useskill 'Peacemaking'
        wft 100
    endif
    if insysmsg "What instrument"
        if findtype "bamboo flute" backpack as inny
            target inny
        elseif findtype "tambourine" backpack as inny
            target inny
        elseif findtype "drum" backpack as inny
            target inny
        elseif findtype "lute" backpack as inny
            target inny
        elseif findtype "lap harp" backpack as inny
            target inny
        else
            overhead "I don't have an inny" 34
            wait missingWait
            replay
        endif
        wft 200
    endif
    if findtype "an anaconda" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a rock guar" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a sand crawler" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a wolfhound" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    else
        overhead "No mob found" 34
        wait missingWait
        replay
    endif
    if skill "Discordance" < trainDiscordance
        if skill "Peacemaking" < trainPeacemaking
            if balancePeaceProv = 1
                if skill "Peacemaking" <= skill "Provocation"
                    wait discordanceDelay
                    useskill 'Discordance'
                    wft 100
                endif
            else
                wait discordanceDelay
                useskill 'Discordance'
                wft 100
            endif
            if findtype "an anaconda" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a rock guar" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a sand crawler" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a wolfhound" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            else
                overhead "No mob found" 34
                wait missingWait
                replay
            endif
        endif
    endif
elseif skill "Provocation" < trainProvocation
    if balancePeaceProv = 1
        if skill "Provocation" <= skill "Peacemaking"
            useskill 'Provocation'
            wft 100
        endif
    else
        useskill 'Provocation'
        wft 100
    endif
    if insysmsg "What instrument"
        if findtype "bamboo flute" backpack as inny
            target inny
        elseif findtype "tambourine" backpack as inny
            target inny
        elseif findtype "drum" backpack as inny
            target inny
        elseif findtype "lute" backpack as inny
            target inny
        elseif findtype "lap harp" backpack as inny
            target inny
        else
            overhead "I don't have an inny" 34
            wait missingWait
            replay
        endif
        wft 200
    endif
    if findtype "an anaconda" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a rock guar" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a sand crawler" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    elseif findtype "a wolfhound" ground -1 -1 10 as mob
        if noto mob = hostile
            target mob
        else
            ignore mob
            replay
        endif
    else
        overhead "No mob found" 34
        wait missingWait
        replay
    endif
    if skill "Discordance" < trainDiscordance
        if skill "Provocation" < trainProvocation
            if balancePeaceProv = 1
                if skill "Provocation" <= skill "Peacemaking"
                    wait discordanceDelay
                    useskill 'Discordance'
                    wft 100
                endif
            else
                wait discordanceDelay
                useskill 'Discordance'
                wft 100
            endif
            if findtype "an anaconda" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a rock guar" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a sand crawler" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            elseif findtype "a wolfhound" ground -1 -1 10 as mob
                if noto mob = hostile
                    target mob
                else
                    ignore mob
                    replay
                endif
            else
                overhead "No mob found" 34
                wait missingWait
                replay
            endif
        endif
    endif
else
    overhead "You beat the game" 88
    overhead "Adjust skill check" 34
    stop
endif

if insysmsg "Your barding skill cooldowns reset."
    replay
endif

for 1
    #overhead "Waiting..." 88
    wait loopDelay
endfor

loop