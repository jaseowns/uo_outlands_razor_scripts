# Bapeths Deck Poisoner
#
# This script will search for enemy crewmembers
# And will poison them if they are not poisoned
#
# Script starts here
if mana >= 9
    hotkey "Cancel Current Target"
    hotkey '> Interrupt'
    for 250
        hotkey "Next Monster Target"
        @setvar enemycrew lasttarget
        if noto "enemycrew" = "hostile"
            getlabel enemycrew desc
            if "Ticks" in desc
                //do nothing
            elseif "Poison" in desc
                //do nothing
            else
                cast "Poison"
                wft 2000
                target enemycrew
                hotkey "Cancel Current Target"
                pause 250
                replay
            endif
            break
        elseif noto "enemycrew" = "criminal"
            getlabel enemycrew desc
            if "Ticks" in desc
                //do nothing
            elseif "Poison" in desc
                //do nothing
            else
                cast "Poison"
                wft 2000
                target enemycrew
                hotkey "Cancel Current Target"
                pause 250
                replay
            endif
            break
        elseif noto "enemycrew" = "murderer"
            getlabel enemycrew desc
            if "Ticks" in desc
                //do nothing
            elseif "Poison" in desc
                //do nothing
            else
                cast "Poison"
                wft 2000
                target enemycrew
                hotkey "Cancel Current Target"
                pause 250
                replay
            endif
            break
        elseif noto "enemycrew" = "enemy"
            getlabel enemycrew desc
            if "Ticks" in desc
                //do nothing
            elseif "Poison" in desc
                //do nothing
            else
                cast "Poison"
                wft 2000
                target enemycrew
                hotkey "Cancel Current Target"
                pause 250
                replay
            endif
            break
        endif
    endfor
else 
    overhead "Not enough mana..." 38
endif
script 'Master Background'