# Bapeths Crew Cure
#
# This script will search your crewmembers status
# And will arch cure them if they are poisoned
# Will not work if crew turns grey (rare)
#
# Script starts here
if mana >= 11
    hotkey "Cancel Current Target"
    hotkey '> Interrupt'
    for 25
        hotkey "Next Monster Target"
        @setvar crewmember lasttarget
        if noto crewmember = "friend"
            getlabel crewmember desc
            if "Poison" in desc
                cast "Arch Cure"
                wft 2400
                target crewmember
                pause 250
                if "Poison" in desc
                    replay
                endif
                break
            elseif "Ticks" in desc
                cast "Arch Cure"
                wft 2400
                target crewmember
                pause 250
                if "Ticks" in desc
                    replay
                endif
                break
            endif
        endif
    endfor
    hotkey "Cancel Current Target"
else 
    overhead "Not enough mana..." 38
endif
script 'Master Backround'