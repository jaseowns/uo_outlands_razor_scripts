    wft 500
    overhead "Set Plate Gloves..." 88
    while targetexists 
        //donothing
    endwhile
    @setvar "NoMBgloves" lasttarget 
    getlabel "NoMBgloves" desc
    if "platemail gloves" in desc
        //donothing
    else 
